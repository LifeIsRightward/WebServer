				response.sendRedirect("show.jsp");
			}catch(SQLException ex){
				out.println("레코드 삽입이 실패했다. <br>");
				out.println("SQLException: " + ex.getMessage());
			}finally{
				if(stmt != null){
					stmt.close();
				}
				if(conn != null){
					conn.close();
				}
			}
